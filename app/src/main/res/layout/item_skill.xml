<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/skill_xp_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/skill_icon"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="6500XP"
                />

            <TextView
                android:id="@+id/skill_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/skill_name"
                app:layout_constraintTop_toBottomOf="@+id/skill_name"
                tools:text="Intellect"
                />

            <TextView
                android:id="@+id/skill_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/skill_icon"
                app:layout_constraintTop_toTopOf="@+id/skill_icon"
                tools:text="Reading"
                />

            <ImageView
                android:id="@+id/skill_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_baseline_book_24"
                />

            <TextView
                android:id="@+id/skill_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/skill_xp_gain"
                app:layout_constraintEnd_toEndOf="@+id/skill_xp_gain"
                app:layout_constraintTop_toBottomOf="@+id/skill_category"
                tools:text="Level 12"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>