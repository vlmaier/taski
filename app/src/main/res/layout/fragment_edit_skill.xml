<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".features.tasks.TaskCreateFragment"
            >

            <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Skill information"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/edit_icon_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:hint="Name of the skill"
                android:inputType="textCapSentences|textAutoCorrect"
                android:lines="1"
                android:maxLength="100"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/edit_icon_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header"
                />

            <ImageButton
                android:id="@+id/edit_icon_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:onClick="selectIconButtonClicked"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/header"
                tools:background="@drawable/ic_baseline_assignment_24"
                tools:backgroundTint="@color/colorSecondary"
                />

            <Button
                android:id="@+id/delete_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="Delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category"
                app:layout_constraintVertical_bias="1.0"
                />

            <AutoCompleteTextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Skill category"
                android:lines="1"
                android:maxLength="100"
                android:maxLines="1"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="@+id/edit_icon_button"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name"
                />

            <TextView
                android:id="@+id/skill_xp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Skill experience"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/skill_level_text"
                app:layout_constraintTop_toBottomOf="@+id/skill_level_text" />

            <TextView
                android:id="@+id/skill_open_tasks_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Amount of open tasks"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/skill_xp_text"
                app:layout_constraintTop_toBottomOf="@+id/skill_xp_text" />

            <TextView
                android:id="@+id/skill_done_tasks_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Amount of done tasks"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/skill_open_tasks_text"
                app:layout_constraintTop_toBottomOf="@+id/skill_open_tasks_text" />

            <TextView
                android:id="@+id/skill_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:text="Skill level"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/category"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                android:id="@+id/skill_xp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/skill_xp_text"
                app:layout_constraintEnd_toEndOf="@+id/skill_level_value"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/skill_xp_text"
                app:layout_constraintTop_toTopOf="@+id/skill_xp_text"
                tools:text="1500 XP" />

            <TextView
                android:id="@+id/skill_level_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/skill_level_text"
                app:layout_constraintEnd_toEndOf="@+id/category"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/skill_level_text"
                app:layout_constraintTop_toTopOf="@+id/skill_level_text"
                app:layout_constraintVertical_bias="0.0"
                tools:text="1" />

            <TextView
                android:id="@+id/skill_done_tasks_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/skill_done_tasks_text"
                app:layout_constraintEnd_toEndOf="@+id/category"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/skill_done_tasks_text"
                app:layout_constraintTop_toTopOf="@+id/skill_done_tasks_text"
                tools:text="3" />

            <TextView
                android:id="@+id/skill_open_tasks_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/skill_open_tasks_text"
                app:layout_constraintEnd_toEndOf="@+id/category"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/skill_open_tasks_text"
                app:layout_constraintTop_toTopOf="@+id/skill_open_tasks_text"
                tools:text="8" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>