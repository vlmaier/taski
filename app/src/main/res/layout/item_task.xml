<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:layout_constraintBottom_toBottomOf="@+id/task_goal"
                app:layout_constraintEnd_toEndOf="@+id/task_xp"
                app:layout_constraintTop_toTopOf="@+id/task_goal"
                app:srcCompat="@drawable/ic_baseline_access_time_24"
                />

            <ImageView
                android:id="@+id/skill_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:layout_constraintBottom_toBottomOf="@+id/task_details"
                app:layout_constraintEnd_toEndOf="@+id/task_xp"
                app:layout_constraintStart_toStartOf="@+id/time_icon"
                app:layout_constraintTop_toBottomOf="@+id/task_goal"
                app:srcCompat="@drawable/ic_baseline_style_24"
                />

            <ImageView
                android:id="@+id/skill_tag_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/task_icon"
                app:layout_constraintStart_toStartOf="@+id/task_details"
                app:layout_constraintTop_toBottomOf="@+id/task_details"
                app:srcCompat="@drawable/ic_baseline_label_24"
                />

            <ImageView
                android:id="@+id/task_icon"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_baseline_assignment_24"
                tools:tint="@color/colorSecondary"
                />

            <TextView
                android:id="@+id/task_goal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/task_duration"
                app:layout_constraintStart_toEndOf="@+id/task_icon"
                app:layout_constraintTop_toTopOf="@+id/task_icon"
                tools:text="Goal"
                />

            <TextView
                android:id="@+id/task_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="@+id/task_goal"
                app:layout_constraintStart_toStartOf="@+id/task_goal"
                app:layout_constraintTop_toBottomOf="@+id/task_goal"
                tools:text="Details"
                />

            <TextView
                android:id="@+id/task_xp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/task_details"
                tools:text="250 XP"
                />

            <TextView
                android:id="@+id/skill_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/skill_icon"
                app:layout_constraintEnd_toStartOf="@+id/skill_icon"
                app:layout_constraintTop_toTopOf="@+id/skill_icon"
                tools:text="2 skills"
                />

            <TextView
                android:id="@+id/skill_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:textSize="14sp"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/skill_tag_icon"
                app:layout_constraintStart_toEndOf="@+id/skill_tag_icon"
                app:layout_constraintTop_toTopOf="@+id/skill_tag_icon"
                tools:text="Work, Important"
                />

            <TextView
                android:id="@+id/task_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:autoSizeTextType="uniform"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/time_icon"
                app:layout_constraintEnd_toStartOf="@+id/time_icon"
                app:layout_constraintTop_toTopOf="@+id/time_icon"
                tools:text="15 min"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>