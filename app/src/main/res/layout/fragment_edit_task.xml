<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".features.tasks.TaskEditFragment">

            <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Task information"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/icon_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/goal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:hint="Goal to achieve"
                android:inputType="textCapSentences|textAutoCorrect"
                android:lines="1"
                android:maxLength="100"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/icon_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header" />

            <EditText
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Details"
                android:inputType="textCapSentences|textAutoCorrect"
                android:lines="1"
                android:maxLength="100"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/icon_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goal" />

            <EditText
                android:id="@+id/deadline_date"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="date"
                android:inputType="none"
                android:singleLine="true"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/deadline_time_text"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/deadline_date_text"
                app:layout_constraintTop_toBottomOf="@+id/difficulty"
                tools:text="18.04.2020" />

            <EditText
                android:id="@+id/deadline_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="time"
                android:inputType="none"
                android:singleLine="true"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/deadline_date"
                app:layout_constraintStart_toEndOf="@+id/deadline_time_text"
                app:layout_constraintTop_toTopOf="@+id/deadline_date"
                tools:text="12:00" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/difficulty_text"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/trivial"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="trivial" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/regular"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="regular"
                    tools:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/hard"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hard" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/insane"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="insane" />

            </com.google.android.material.chip.ChipGroup>

            <ImageButton
                android:id="@+id/icon_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:onClick="selectIconButtonClicked"
                app:layout_constraintBottom_toBottomOf="@+id/goal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/header"
                tools:background="@drawable/ic_baseline_assignment_24"
                tools:backgroundTint="@color/colorSecondary" />

            <TextView
                android:id="@+id/duration_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="Duration"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/duration_bar"
                app:layout_constraintTop_toBottomOf="@+id/details" />

            <TextView
                android:id="@+id/deadline_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Due on"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/deadline_date"
                app:layout_constraintEnd_toStartOf="@+id/deadline_date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/deadline_date" />

            <TextView
                android:id="@+id/deadline_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="at"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/deadline_date_text"
                app:layout_constraintEnd_toStartOf="@+id/deadline_time"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/deadline_date"
                app:layout_constraintTop_toTopOf="@+id/deadline_date_text" />

            <TextView
                android:id="@+id/duration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/duration_text"
                app:layout_constraintEnd_toEndOf="@+id/duration_bar"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/duration_text"
                app:layout_constraintTop_toTopOf="@+id/duration_text"
                tools:text="15 minutes" />

            <TextView
                android:id="@+id/xp_gain_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/xp_gain_text"
                app:layout_constraintEnd_toEndOf="@+id/skills"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/xp_gain_text"
                app:layout_constraintTop_toTopOf="@+id/xp_gain_text"
                tools:text="1500 XP" />

            <SeekBar
                android:id="@+id/duration_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="20"
                app:layout_constraintEnd_toEndOf="@+id/details"
                app:layout_constraintStart_toStartOf="@+id/details"
                app:layout_constraintTop_toBottomOf="@+id/duration_text"
                tools:progress="3" />

            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="Difficulty"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/difficulty"
                app:layout_constraintTop_toBottomOf="@+id/duration_bar" />

            <TextView
                android:id="@+id/skills_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="Skills"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/skills"
                app:layout_constraintTop_toBottomOf="@+id/deadline_date" />

            <TextView
                android:id="@+id/xp_gain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="Experience gained"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/skills"
                app:layout_constraintTop_toBottomOf="@+id/skills" />

            <com.hootsuite.nachos.NachoTextView
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/skills_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>