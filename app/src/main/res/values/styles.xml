<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="icdStyle">@style/CustomIconDialogStyle</item>
    </style>

    <style name="CustomIconDialogStyle" parent="IcdStyle">
        <item name="icdIconSize">64dp</item>
        <item name="icdIconColor">@color/colorSecondary</item>
        <item name="icdSelectedIconColor">@color/colorPrimary</item>
        <item name="icdDialogButtonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>
        <item name="icdSearchIconStyle">@style/CustomIconStyle</item>
        <item name="icdCancelSearchIconStyle">@style/CustomIconStyle</item>
    </style>

    <style name="CustomIconStyle" parent="IcdSearchIconStyle">
        <item name="tint">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
