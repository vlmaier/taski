<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Default" parent="Base.Theme.Default"/>
    <style name="Base.Theme.Default" parent="Base.Theme.MaterialThemeBuilder">
        <item name="colorPrimary">@color/colorPrimaryLightDefault</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLightDefault</item>
        <item name="colorSecondary">@color/colorSecondaryDefault</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDefault</item>
        <item name="android:colorBackground">@color/colorBackgroundLightDefault</item>
        <item name="colorSurface">@color/colorSurfaceLightDefault</item>
        <item name="colorError">@color/colorErrorLightDefault</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLightDefault</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryLightDefault</item>
        <item name="colorOnBackground">@color/colorOnBackgroundLightDefault</item>
        <item name="colorOnSurface">@color/colorOnSurfaceLightDefault</item>
        <item name="colorOnError">@color/colorOnErrorLightDefault</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Default.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.Default.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="actionOverflowButtonStyle">@style/Base.Theme.SettingsButton</item>
        <item name="drawerArrowStyle">@style/Base.Theme.HamburgerButton</item>
    </style>

    <style name="Theme.Sailor" parent="Base.Theme.Sailor"/>
    <style name="Base.Theme.Sailor" parent="Base.Theme.MaterialThemeBuilder">
        <item name="colorPrimary">@color/colorPrimaryLightSailor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLightSailor</item>
        <item name="colorSecondary">@color/colorSecondarySailor</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantSailor</item>
        <item name="android:colorBackground">@color/colorBackgroundLightSailor</item>
        <item name="colorSurface">@color/colorSurfaceLightSailor</item>
        <item name="colorError">@color/colorErrorLightSailor</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLightSailor</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryLightSailor</item>
        <item name="colorOnBackground">@color/colorOnBackgroundLightSailor</item>
        <item name="colorOnSurface">@color/colorOnSurfaceLightSailor</item>
        <item name="colorOnError">@color/colorOnErrorLightSailor</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Default.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.Default.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="actionOverflowButtonStyle">@style/Base.Theme.SettingsButton</item>
        <item name="drawerArrowStyle">@style/Base.Theme.HamburgerButton</item>
    </style>

    <style name="Base.Theme.SettingsButton" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Base.Theme.HamburgerButton" parent="@style/Widget.AppCompat.DrawerArrowToggle" >
        <item name="spinBars">true</item>
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>

</resources>
